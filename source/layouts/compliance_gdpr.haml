- @title ||= "#{current_page.data.title} | Aptible HIPAA Compliance Guide for startups"

= wrap_layout :compliance do
  = yield

-# GDPR only has one section, so always expand it
:javascript
  $(function() {
    var mainNavItem = $('.compliance__sidebar__item--level1');
    if (mainNavItem.hasClass('open') === false) {
      mainNavItem.addClass('open');
      mainNavItem.next('.compliance__expandable__content').slideToggle();
    }
  });
